<%= javascript_include_tag "https://www.google.com/jsapi", "chartkick" %>

<p id="notice"><%= notice %></p>

<h1>Listing Companies</h1>

<%= render 'form' %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="companies">
    <% @companies.each do |company| %>
      <%= render company %>
    <% end %>
  </tbody>
</table>

<%= column_chart @companies_chart %>